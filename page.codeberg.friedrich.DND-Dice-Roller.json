{
  "app-id": "page.codeberg.friedrich.DND-Dice-Roller",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "base": "com.system76.Cosmic.BaseApp",
  "base-version": "stable",
  "command": "dnd_dice_roller",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--talk-name=com.system76.CosmicSettingsDaemon",
    "--filesystem=xdg-config/cosmic:ro"
  ],
  "cleanup-commands": [
    "/app/cleanup-BaseApp.sh",
    "rm -rf /app/share/icons/Pop/cursors",
    "rm -rf /app/share/icons/Pop/{8x8,16x16,24x24,32x32,48x48,64x64,128x128,256x256,512x512}",
    "rm -rf /app/share/icons/Pop/scalable/{apps,categories,devices,emblems,emotes,mimetypes,places,status}",
    "rm -rf /app/share/icons/Cosmic/scalable/{apps,categories,devices,emblems,mimetypes,places}"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin"
  },
  "modules": [
    {
      "name": "dnd_dice_roller",
      "buildsystem": "simple",
      "build-options": {
        "env": {
          "CARGO_HOME": "/run/build/dnd_dice_roller/cargo"
        }
      },
      "build-commands": [
        "cargo --offline fetch --manifest-path Cargo.toml --verbose",
        "cargo --offline build --release --verbose",
        "install -Dm0755 ./target/release/dnd_dice_roller /app/bin/dnd_dice_roller",
        "install -Dm0644 ./res/page.codeberg.friedrich.DND-Dice-Roller.desktop /app/share/applications/page.codeberg.friedrich.DND-Dice-Roller.desktop",
        "install -Dm0644 ./res/page.codeberg.friedrich.DND-Dice-Roller.metainfo.xml /app/share/metainfo/page.codeberg.friedrich.DND-Dice-Roller.metainfo.xml",
        "install -Dm0644 ./res/icons/hicolor/scalable/apps/page.codeberg.friedrich.DND-Dice-Roller.svg /app/share/icons/hicolor/scalable/apps/page.codeberg.friedrich.DND-Dice-Roller.svg"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://codeberg.org/Friedrich/dnd-dice-roller.git",
          "tag": "v0.2.2.1"
        },
        "cargo-sources.json"
      ]
    }
  ]
}
